<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="450.0" prefWidth="350.0" stylesheets="@../style/login.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hust.soict.cybersec.cookhandbook.controller.RegisterController">
    <children>
        <Label layoutX="80.0" layoutY="30.0" styleClass="title-label" text="Register an Account" />
        <Label layoutX="40.0" layoutY="100.0" styleClass="field-label" text="Username:" />
        <TextField fx:id="usernameField" layoutX="144.0" layoutY="94.0" promptText="Enter a username" styleClass="text-field" />
        <Label layoutX="40.0" layoutY="150.0" styleClass="field-label" text="Password:" />
        <PasswordField fx:id="passwordField" layoutX="144.0" layoutY="144.0" promptText="Enter a password" styleClass="text-field" />
        <Label layoutX="38.0" layoutY="190.0" prefHeight="39.0" prefWidth="85.0" styleClass="field-label" text="Confirm Password:" wrapText="true" />
        <PasswordField fx:id="confirmPasswordField" layoutX="144.0" layoutY="194.0" promptText="Confirm your password" styleClass="text-field" />
        <Button fx:id="registerButton" layoutX="102.0" layoutY="256.0" onAction="#handleRegister" styleClass="primary-button" text="Register" />
        <Button fx:id="switchToLoginButton" layoutX="212.0" layoutY="256.0" styleClass="secondary-button" text="Login" />
    </children>
</AnchorPane>
