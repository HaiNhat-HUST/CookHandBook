<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="450.0" prefWidth="350.0" stylesheets="@../style/login.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hust.soict.cybersec.cookhandbook.controller.LoginController">
   <children>

      <!-- Page Title -->
      <Label layoutX="55.0" layoutY="41.0" styleClass="title-label" text="Login to Cook Handbook" />

      <!-- Username Field -->
      <Label layoutX="40.0" layoutY="100.0" styleClass="field-label" text="Username:" />
      <TextField fx:id="usernameField" layoutX="120.0" layoutY="96.0" promptText="Enter your username" styleClass="text-field" />

      <!-- Password Field -->
      <Label layoutX="40.0" layoutY="150.0" styleClass="field-label" text="Password:" />
      <PasswordField fx:id="passwordField" layoutX="120.0" layoutY="146.0" promptText="Enter your password" styleClass="text-field" />

      <!-- Buttons -->
      <Button fx:id="loginButton" layoutX="102.0" layoutY="220.0" onAction="#handleLogin" styleClass="primary-button" text="Login" />
      <Button fx:id="registerButton" layoutX="190.0" layoutY="220.0" onAction="#handleRegister" styleClass="secondary-button" text="Register" />

   </children>
</AnchorPane>
